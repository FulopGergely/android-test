<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="150dp"
                android:padding="8dp"
                android:text="SalesLead!" />






            <TextView
                android:id="@+id/name"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/href"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/href"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />



            <Button
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_centerHorizontal="true"
                android:onClick="website"
                android:layout_marginLeft="10dp"
                android:text="Open Website" />

            <EditText
                android:id="@+id/editMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="üzenj Fülöp Balázsnak"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/message"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="10dp"
                android:onClick="message"
                android:text="Küldés" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="160dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/href2"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/description2"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/href"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editMessage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="üzenj fogaskerek kft-nek"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:onClick="message2"
                android:layout_marginLeft="10dp"
                android:text="Küldés"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/name3"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="160dp"
                android:padding="8dp" />



            <TextView
                android:id="@+id/href3"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/description3"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editMessage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="üzenj József Tibornak"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/message3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginLeft="10dp"
                android:onClick="message3"
                android:text="Küldés"
                android:layout_centerHorizontal="true"/>











        </LinearLayout>
    </ScrollView>
</LinearLayout>




